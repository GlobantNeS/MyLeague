<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.globant.myleague" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/nullString"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TeamsListActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".SignUpTeamActivity"
            android:label="@string/title_activity_create_tournament" >

        </activity>
        <activity
            android:name=".AddTeamActivity"
            android:label="@string/title_activity_add_team" >
        </activity>
        <activity
            android:name=".MatchResultActivity"
            android:label="@string/title_activity_match_result" >
        </activity>
        <activity
            android:name=".PrincipalNewsActivity"

            android:label="@string/label_news" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>

        </activity>
        <activity
            android:name=".SettingsPrincipalActivity"
            android:label="@string/title_principal_activity_settings"
            android:parentActivityName=".PrincipalNewsActivity"
            android:theme="@android:style/Theme.Holo.Light.DarkActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PrincipalNewsActivity" />
        </activity>
        <activity
            android:name=".MatchesListActivity"
            android:label="@string/title_activity_match_list" >
        </activity>
        <activity
            android:name=".CreateTournamentActivity"
            android:label="@string/title_activity_teams_list" >
        </activity>

        <activity android:name=".MatchesFillActivity"/>
        <activity android:name=".SelectTournamentToMatchActivity"/>
        <activity android:name=".SelectTournamentToSignUpActivity">
        </activity>
        <activity android:name=".ManagerScreenActivity"
                  android:label="@string/text_name_app">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SettingsMainActivity"/>
    </application>

</manifest>
